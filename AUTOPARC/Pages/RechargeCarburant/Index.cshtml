@page
@model AUTOPARC.Pages.RechargeCarburant.IndexModel
@{
    ViewData["Title"] = "Liste des Recharges Carburant";
}


<div class="container-fluid">
    <div class="container-fluid py-1 mb-2 bg-dark">
        <h3 class="mb-0 text-center text-light">Recharge Carburants</h3>
    </div>

    <div class="card">
        <div class="card-body wizard-content">
            <h4 class="card-title title-2">Historique des recharges Carburant</h4>
            <hr>

            <div class="mt-5">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th class="text text-white bg-info">Matricule</th>
                                <th class="text text-white bg-info">Type Carburant</th>
                                <th class="text text-white text-center bg-info">Quantite (Litre)</th>
                                <th class="text text-white text-center bg-info">Prix Unitaire (DH)</th>
                                <th class="text text-white text-center bg-info">Prix Total (DH)</th>
                                <th class="text text-white text-center bg-info">Methode de Payement</th>
                                <th class="text text-white text-center bg-info">Kilometrage (Km)</th>
                                <th class="text text-white text-center bg-info">Date Recharge</th>
                                <th class="text text-white text-center bg-info">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RechargeCarburants)
                            {
                                decimal total = item.Quantite * item.Pu;
                                <tr>
                                    <td class="text-dark" style="font-size:18px;">@item.Vehicule.Matricule</td>
                                    <td class="text-dark" style="font-size:18px;">@item.Vehicule.Carburant.Type</td>
                                    <td class="text-dark text-center" style="font-size:18px;">@item.Quantite</td>
                                    <td class="text-dark text-center" style="font-size:18px;">@item.Pu</td>
                                    <td class="text-success font-weight-bold text-center" style="font-size:18px;">@total</td>
                                    <td class="text-dark text-center" style="font-size:18px;">@item.ModePaiment.Mode</td>
                                    <td class="text-dark text-center" style="font-size:18px;">@item.Km</td>
                                    <td class="text-dark text-center" style="font-size:18px;">@item.DateRecharge?.ToShortDateString()</td>
                                    <td class="text-dark">
                                        <a asp-route-id="@item.Id" asp-page="/RechargeCarburant/Details" class="text text-white btn btn-info btn-block fs-5 font-weight-bold"><i class="bi bi-info-circle-fill"></i> info</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>