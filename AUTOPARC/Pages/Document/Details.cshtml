@page
@model AUTOPARC.Pages.Document.DetailsModel
@{
    ViewData["Title"] = "Details Document";
}


<div class="container-fluid">
    <div class="container-fluid py-1 mb-2 bg-dark">
        <h3 class="mb-0 text-center text-light">Documents</h3>
    </div>

    <div class="card">
        <div class="card-body wizard-content">
            <h4 class="card-title title-2">Form de Modification du Document</h4>
            <hr>
            @if (Model.check_date)
            {
                <div asp-validation-summary=All class="alert alert-danger" role="alert">
                    <p>la date de début du document doit être inferieure à la date de fin.</p>
                </div>
            }
            @if (Model.check_exception)
            {
                <div asp-validation-summary=All class="alert alert-danger" role="alert">
                    <p>Veuillez vérifier vos entrées.</p>
                </div>
            }
            <div class="mt-4">
                <div class="container">
                    <div class="row d-flex justify-content-center">
                        <div class="col-12">
                            <div class="card" style="background-color:#F2F2F2">
                                <div class="card-header fs-4 font-weight-bold">Document</div>
                                <div class="card-body">
                                    <div class="card-title">
                                        <h3 class="text-center title-1 font-weight-bold">Modifier Document</h3>
                                    </div>
                                    <hr>
                                    <form method="post" enctype="multipart/form-data">

                                        <input type="hidden" asp-for="Docs.Id" />

                                        <div class="form-row">
                                            <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                                <label asp-for="Docs.VehiculeId" class="control-label">Matricule Véhicule</label>
                                                <span asp-validation-for="Docs.VehiculeId" class="text text-danger"></span>
                                                <select asp-for="Docs.VehiculeId" class="form-control form-select">
                                                    <option value="value">Choisir...</option>
                                                    @foreach (var item in Model.Vehicules)
                                                    {
                                                        <option value="@item.Id">@item.Matricule</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                                <label asp-for="Docs.Numero" class="control-label">Numéro Document</label>
                                                <span asp-validation-for="Docs.Numero" class="text text-danger"></span>
                                                <input asp-for="Docs.Numero" type="text" class="form-control">
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                                <label asp-for="Docs.TypeId" class="control-label">Type Document</label>
                                                <span asp-validation-for="Docs.TypeId" class="text text-danger"></span>
                                                <select asp-for="Docs.TypeId" class="form-control form-select">
                                                    <option value="">Choisir...</option>
                                                    @foreach (var item in Model.TypeDocs)
                                                    {
                                                        <option value="@item.Id">@item.Type</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                                <label asp-for="Docs.FrsId" class="control-label">Fournisseur</label>
                                                <span asp-validation-for="Docs.FrsId" class="text text-danger"></span>
                                                <select asp-for="Docs.FrsId" class="form-control form-select">
                                                    <option value="">Choisir...</option>
                                                    @foreach (var item in Model.Fournisseurs)
                                                    {
                                                        <option value="@item.Id">@item.Nom</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-6">
                                                <label asp-for="Docs.DateDebut" class="control-label">Date Début</label>
                                                <span asp-validation-for="Docs.DateDebut" class="text text-danger"></span>
                                                <input asp-for="Docs.DateDebut" type="date" class="form-control" max="@DateTime.Now.AddYears(20).ToString("yyyy-MM-dd")" aria-required="true">
                                            </div>

                                            <div class="form-group col-6">
                                                <label asp-for="Docs.DateFin" class="control-label">Date Fin</label>
                                                <span asp-validation-for="Docs.DateFin" class="text text-danger"></span>
                                                <input asp-for="Docs.DateFin" type="date" class="form-control" max="@DateTime.Now.AddYears(20).ToString("yyyy-MM-dd")" aria-required="true">
                                            </div>
                                        </div>

                                        @*@{
                                            string url = Model?.Docs?.UrlDoc;
                                        }
                                        @if (!string.IsNullOrEmpty(url))
                                        {
                                            <div class="form-row">
                                                <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                                    <label asp-for="Docs.UrlDoc" class="control-label">URL Document <span class="text-primary h6">@url</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" id="inputFileAdd">URL</span>
                                                        </div>
                                                        <div class="custom-file">
                                                            <input asp-for="Docs.UrlDoc" type="file" class="custom-file-input" id="inputFile">
                                                            <label class="custom-file-label" for="inputFile">Choisir un fichier...</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                                    <label>&nbsp;</label>
                                                    <button asp-page-handler="DownloadFile" class="btn btn-primary btn-block">Telecharger Document</button>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="form-row">
                                                <div class="form-group col-12">
                                                    <label asp-for="Docs.UrlDoc" class="control-label">URL Document <span class="text-primary h6">@url</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" id="inputFileAdd">URL</span>
                                                        </div>
                                                        <div class="custom-file">
                                                            <input asp-for="Docs.UrlDoc" type="file" class="custom-file-input" id="inputFile">
                                                            <label class="custom-file-label" for="inputFile">Choisir un fichier...</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }*@

                                        <div class="form-group row">
                                            <div class="col-md-4 mt-3">
                                                <button asp-page-handler="Update" class="btn btn-lg btn-info btn-block">Modifier</button>
                                            </div>
                                            <div class="col-md-4 mt-3">
                                                <button asp-page-handler="Delete" class="btn btn-lg btn-danger btn-block" onclick="return confirm('Voulez-vous vraiment supprimer ce document?')" style="background-color:crimson">Supprimer</button>
                                            </div>
                                            <div class="col-md-4 mt-3">
                                                <a asp-page="/Document/Index" class="btn btn-lg btn-secondary btn-block">Retour</a>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


@section DocUploadJS {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#inputFile').on("change", function () {
                var inputPicture = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(inputPicture);
            });
        });
    </script>
}