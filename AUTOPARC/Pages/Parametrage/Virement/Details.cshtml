@page
@model AUTOPARC.Pages.Parametrage.Virement.DetailsModel
@{
    ViewData["Title"] = "Details Virement";
}


<div class="container-fluid">
    <div class="container-fluid py-1 mb-2 bg-dark">
        <h3 class="mb-0 text-center text-light">Parametrage</h3>
    </div>

    <div class="card">
        <div class="card-body wizard-content">
            <h4 class="card-title title-2">Payé Virement</h4>
            <hr>
            <form method="post">
                <input asp-for="Virements.Id" type="hidden" />
                <input asp-for="Virements.Etat" type="hidden" />

                <div class="form-row">
                    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <label asp-for="Virements.Action" class="control-label">Action</label>
                        <input asp-for="Virements.Action" type="text" class="form-control" readonly>
                    </div>

                    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <label asp-for="Virements.ActionNum" class="control-label">Numéro d'Action</label>
                        <input asp-for="Virements.ActionNum" type="text" class="form-control" readonly>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <label asp-for="Virements.Rib" class="control-label">R.I.B</label>
                        <input asp-for="Virements.Rib" type="text" class="form-control" readonly>
                    </div>

                    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <label asp-for="Virements.Banque.Nom" class="control-label">Banque</label>
                        <input asp-for="Virements.Banque.Nom" type="text" class="form-control" readonly>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <label asp-for="Virements.Montant" class="control-label">Montant (DH)</label>
                        <input asp-for="Virements.Montant" type="text" class="form-control" readonly>
                    </div>

                    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <label asp-for="Virements.AuNomDe" class="control-label">Au nom de:</label>
                        <input asp-for="Virements.AuNomDe" type="text" class="form-control" readonly>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <label asp-for="Virements.DateVirement" class="control-label">Date Virement</label>
                        <input asp-for="Virements.DateVirement" type="date" class="form-control" readonly>
                    </div>
                </div>

                @if (Model.Virements.Etat == "payé")
                {
                    <div class="form-group row text-white">
                        <div class="col-12 mt-3">
                            <a asp-page="/Parametrage/Virement/Index" class="btn btn-secondary btn-lg btn-block">Retour</a>
                        </div>
                    </div>
                    return;
                }
                <div class="form-group row text-white">
                    <div class="col-12 mt-3">
                        <a data-toggle="modal" data-target="#payeemodal" class="btn btn-primary btn-lg btn-block">Payé</a>
                    </div>
                </div>



                <!-- Payée Modal -->
                <div class="modal fade" id="payeemodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Voulez-vous vraiment valider ce virement?</h4>
                                <button type="button" class="close mb-1" data-dismiss="modal" aria-label="Close"><i class="bi bi-x-circle"></i></button>
                            </div>
                            <div class="modal-footer">
                                <button asp-page-handler="Payee" class="btn btn-primary btn-lg">Valider</button>
                                <button data-dismiss="modal" class="btn btn-secondary btn-lg">Annuler</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>