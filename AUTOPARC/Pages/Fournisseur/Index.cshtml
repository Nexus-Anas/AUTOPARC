@page
@model AUTOPARC.Pages.Fournisseur.IndexModel
@{
    ViewData["Title"] = "Liste des Fournisseurs";
}


<div class="container-fluid">
    <div class="container-fluid py-1 mb-2 bg-dark">
        <h3 class="mb-0 text-center text-light">Fournisseurs</h3>
    </div>

    <div class="card">
        <div class="card-body wizard-content">
            <div class="row">
                <div class="col-xl-8 col-12">
                    <h4 class="card-title title-2">Listes des Fournisseur</h4>
                </div>
                <div class="col-xl-4 col-12 text-right">
                    <a href="#" class="btn btn-info mt-1"><i class="bi bi-printer-fill"></i> Imprimé</a>
                </div>
            </div>
            <hr>

            <div class="mt-3">

                <div class="row">
                    <div class="col-12 text-right">
                        <a asp-page="/Fournisseur/Create" class="btn btn-primary btn-lg mb-2"><i class="fas fa-plus"></i>&nbsp; Nouveau Fournisseur</a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="zero_config" class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th class="text-white bg-primary"><span class="h5">Nom</span></th>
                                <th class="text-white bg-primary"><span class="h5">Email</span></th>
                                <th class="text-white bg-primary"><span class="h5">Telephone</span></th>
                                <th class="text-white bg-primary"><span class="h5">Portable</span></th>
                                <th class="text-white bg-primary"><span class="h5">Ville</span></th>
                                <th class="text-white bg-primary"><span class="h5">Fonction</span></th>
                                <th class="text-white bg-primary text-center"><span class="h5">Action</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Fournisseurs)
                            {
                                <tr class="h5">
                                    <td class="text-dark">@item.Nom</td>
                                    <td class="text-dark">@item.Email</td>
                                    <td class="text-dark">@item.Telephone</td>
                                    <td class="text-dark">@item.Portable</td>
                                    <td class="text-dark">@item.Ville.Nom</td>
                                    <td class="text-dark">@item.TypeFrs.Type</td>
                                    <td class="text-dark d-flex justify-content-center">
                                        <a asp-route-id="@item.Id" asp-page="/Fournisseur/Details" class="text text-white btn btn-primary btn-block"><i class="bi bi-info-circle-fill"></i> Consulter</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</div>