@page
@model AUTOPARC.Pages.User.LoginModel
@{
    Layout = "/Pages/Shared/_LayoutUser.cshtml";
}



<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">

                    @if (Model.user_not_found)
                    {
                        <div asp-validation-summary=All class="alert alert-danger" role="alert">
                            <p>Aucun utilisateur trouvé</p>
                        </div>
                    }

                    <div class="login-logo">
                        <a href="#">
                            <img src="~/images/icon/logo.png" alt="CoolAdmin">
                        </a>
                    </div>
                    <div class="login-form">
                        <form method="post">
                            
                            <div class="form-group">
                                <label asp-for="Users.Email">Adresse e-mail <span class="text-danger">*</span></label>
                                <span asp-validation-for="Users.Email" class="text-danger"></span>
                                <input asp-for="Users.Email" type="email" class="required form-control" placeholder="Entrer votre Adresse e-mail">
                            </div>

                            <div class="form-group">
                                <label asp-for="Users.Password">Mot de passe <span class="text-danger">*</span></label>
                                <span asp-validation-for="Users.Password" class="text-danger"></span>
                                <input asp-for="Users.Password" type="password" class="required form-control" placeholder="Entrer votre Mot de passe">
                            </div>


                            <button asp-page-handler="Login" class="btn btn-primary btn-block">Se connecter</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Vous n'avez pas de compte ?
                                <a asp-page="/User/Register" class="text-success h6">Inscrivez-vous ici</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}