@page
@model AUTOPARC.Pages.Chauffeur.IndexModel
@{
    ViewData["Title"] = "Liste des Chauffeurs";
}


<div class="container-fluid">
    <div class="container-fluid py-1 mb-2 bg-dark">
        <h3 class="mb-0 text-center text-light">Chauffeurs</h3>
    </div>

    <div class="card">
        <div class="card-body wizard-content">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <h4 class="card-title title-2">Listes des Chauffeurs</h4>
                    </div>
                    <div class="input-group col-sm-3">
                        <a asp-page="/Chauffeur/Create" class="btn btn-primary" style="font-size:18px"><i class="fas fa-plus"></i>&nbsp; Ajouter Chauffeur</a>
                    </div>
                </div>
            </div>
            <hr>

            <div class="mt-5">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th class="text text-white bg-primary" style="font-size:18px">Nom</th>
                                <th class="text text-white bg-primary" style="font-size:18px">Prenom</th>
                                <th class="text text-white bg-primary" style="font-size:18px">Portable</th>
                                <th class="text text-white bg-primary" style="font-size:18px">Email</th>
                                <th class="text text-white bg-primary" style="font-size:18px">Disponibilite</th>
                                <th class="text text-white bg-primary" style="font-size:18px">&nbsp;&nbsp;Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Chauffeurs)
                            {
                                <tr style="font-size:16px">
                                    <td class="text-dark">@item.Nom</td>
                                    <td class="text-dark">@item.Prenom</td>
                                    <td class="text-dark">@item.Portable</td>
                                    <td class="text-dark">@item.Email</td>
                                    <td class="text-dark">@item.Disponibilite</td>
                                    <td class="text-dark">
                                        <a asp-route-id="@item.Id" asp-page="/Chauffeur/Details" class="text text-white btn btn-success btn-block"><i class="bi bi-info-circle-fill"></i> Consulter</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>