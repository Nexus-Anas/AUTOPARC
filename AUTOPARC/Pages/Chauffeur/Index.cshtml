@page
@model AUTOPARC.Pages.Chauffeur.IndexModel
@{
    ViewData["Title"] = "Liste des Chauffeurs";
}


<div class="container-fluid">
    <div class="container-fluid py-1 mb-2 bg-dark">
        <h3 class="mb-0 text-center text-light">Chauffeurs</h3>
    </div>

    <div class="card">
        <div class="card-body wizard-content">
            <div class="row">
                <div class="col-xl-8 col-12">
                    <h4 class="card-title title-2">Listes des Chauffeurs</h4>
                </div>
                <div class="col-xl-4 col-12 text-right">
                    <a href="#" class="btn btn-info mt-1"><i class="bi bi-printer-fill"></i> Imprimé</a>
                </div>
            </div>
            <hr>

            <div class="mt-3">

                <div class="row">
                    <div class="col-12 text-right">
                        <a asp-page="/Chauffeur/Create" class="btn btn-primary btn-lg mb-2"><i class="fas fa-plus"></i>&nbsp; Nouveau Chauffeur</a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th class="text-white bg-primary"><span class="h5">Nom</span></th>
                                <th class="text-white bg-primary"><span class="h5">Prenom</span></th>
                                <th class="text-white bg-primary"><span class="h5">Portable</span></th>
                                <th class="text-white bg-primary"><span class="h5">Email</span></th>
                                <th class="text-white bg-primary text-center"><span class="h5">Disponibilite</span></th>
                                <th class="text-white bg-primary text-center"><span class="h5">Consulter</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Chauffeurs)
                            {
                                <tr class="h5">
                                    <td class="text-dark">@item.Nom</td>
                                    <td class="text-dark">@item.Prenom</td>
                                    <td class="text-dark">@item.Portable</td>
                                    <td class="text-dark">@item.Email</td>
                                    <td class="text-dark text-center">@item.Disponibilite</td>
                                    <td class="text-dark text-center">
                                        <a asp-route-id="@item.Id" asp-page="/Chauffeur/Details" class="text text-white btn btn-primary"><i class="bi bi-info-circle-fill"></i> info</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>