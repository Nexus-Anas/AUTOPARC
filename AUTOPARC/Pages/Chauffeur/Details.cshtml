@page
@model AUTOPARC.Pages.Chauffeur.DetailsModel
@{
    ViewData["Title"] = "Details Fournisseur";
}


<div class="container-fluid">
    <div class="container-fluid py-1 mb-2 bg-dark">
        <h3 class="mb-0 text-center text-light">Chauffeurs</h3>
    </div>

    <div class="card">
        <div class="card-body wizard-content">
            <h4 class="card-title title-2">Modifier Chauffeurs</h4>
            <hr>
            <form method="post">

                <div class="form-row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.Nom" class="control-label mb-1 fs-4">Nom <span style="color:red">*</span></label>
                        <span asp-validation-for="Chauffeurs.Nom" class="text-danger"></span>
                        <input asp-for="Chauffeurs.Nom" type="text" class="required form-control fs-4">
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.Prenom" class="control-label mb-1 fs-4">Prenom </label>
                        <span asp-validation-for="Chauffeurs.Prenom" class="text-danger"></span>
                        <input asp-for="Chauffeurs.Prenom" type="text" class="form-control fs-4">
                    </div>
                </div>

                <div class="form-row">
                    <input type="hidden" asp-for="Chauffeurs.Id" />

                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.Email" class="control-label mb-1 fs-4">Email </label>
                        <span asp-validation-for="Chauffeurs.Email" class="text-danger"></span>
                        <input asp-for="Chauffeurs.Email" type="email" class="form-control fs-4">
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.Portable" class="control-label mb-1 fs-4">Portable</label>
                        <span asp-validation-for="Chauffeurs.Portable" class="text-danger"></span>
                        <input asp-for="Chauffeurs.Portable" type="text" class="form-control fs-4">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Chauffeurs.DateNaissance" class="control-label mb-1">Date de Naissance</label>
                        <span asp-validation-for="Chauffeurs.DateNaissance" class="text text-danger"></span>
                        <input asp-for="Chauffeurs.DateNaissance" type="date" class="form-control" max="@DateTime.Now.AddYears(20).ToString("yyyy-MM-dd")" aria-required="true">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.NumeroPermisConduire" class="control-label mb-1 fs-4">Numero Permis de Conduire <span style="color:red">*</span></label>
                        <span asp-validation-for="Chauffeurs.NumeroPermisConduire" class="text-danger"></span>
                        <input asp-for="Chauffeurs.NumeroPermisConduire" type="text" class="required form-control fs-4">
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.DateExpirationPermis" class="control-label mb-1">Date Expiration Permis</label>
                        <span asp-validation-for="Chauffeurs.DateExpirationPermis" class="text text-danger"></span>
                        <input asp-for="Chauffeurs.DateExpirationPermis" type="date" class="form-control" max="@DateTime.Now.AddYears(20).ToString("yyyy-MM-dd")" aria-required="true">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.Disponibilite">Disponibilite <span style="color:red">*</span></label>
                        <span asp-validation-for="Chauffeurs.Disponibilite" class="text-danger"></span>
                        <select asp-for="Chauffeurs.Disponibilite" class="form-control form-select">
                            <option value="oui">Oui</option>
                            <option value="non">Non</option>
                        </select>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.DateEmbauche" class="control-label mb-1">Date Embauche</label>
                        <span asp-validation-for="Chauffeurs.DateEmbauche" class="text text-danger"></span>
                        <input asp-for="Chauffeurs.DateEmbauche" type="date" class="form-control" max="@DateTime.Now.AddYears(20).ToString("yyyy-MM-dd")" aria-required="true">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.Adresse">Adresse</label>
                        <textarea asp-for="Chauffeurs.Adresse" class="form-control fs-5" rows="4" aria-required="true"></textarea>
                    </div>

                    <div class="form-group col-lg-6 col-md-6 col-sm-6 col-12">
                        <label asp-for="Chauffeurs.Remarques">Remarques</label>
                        <textarea asp-for="Chauffeurs.Remarques" class="form-control fs-5" rows="4" aria-required="true"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4 mt-3">
                        <button asp-page-handler="Update" class="btn btn-lg btn-primary btn-block">Modifier</button>
                    </div>
                    <div class="col-md-4 mt-3">
                        <button asp-page-handler="Delete" class="btn btn-lg btn-danger btn-block" onclick="return confirm('Voulez-vous vraiment supprimer ce fournisseur?')">Supprimer</button>
                    </div>
                    <div class="col-md-4 mt-3">
                        <a asp-page="/Chauffeur/Index" class="btn btn-lg btn-secondary btn-block">Retour</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>