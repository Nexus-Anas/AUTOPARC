                    <div class="form-group col-xl-8 col-lg-8 col-md-6 col-sm-6 col-12">
                        @if (Model.check_all_checkboxes)
                        {
                            <p class="text-danger">veuillez cocher au moins 1 case.</p>
                        }
                        <label class="control-label">Mode Paiement <span class="text-danger">*</span></label>
                        <div class="form-row">
                            @foreach (var item in Model.ModePaimentsList)
                            {
                                <div class="form-check ml-2">
                                    @if (item.Mode == "Espece")
                                    {
                                        <input class="form-check-input payment-checkbox" type="checkbox" id="@item.Mode" name="@item.Mode" value="@item.Mode" @(Model.Vehicules.MontantPayeeEspece != 0 ? "checked" : "")>
                                    }
                                    else if (item.Mode == "Cheque")
                                    {
                                        <input class="form-check-input payment-checkbox" type="checkbox" id="@item.Mode" name="@item.Mode" value="@item.Mode" @(Model.Vehicules.MontantPayeeCheque != 0 ? "checked" : "")>
                                    }
                                    else if (item.Mode == "Virement")
                                    {
                                        <input class="form-check-input payment-checkbox" type="checkbox" id="@item.Mode" name="@item.Mode" value="@item.Mode" @(Model.Vehicules.MontantPayeeVirement != 0 ? "checked" : "")>
                                    }
                                    else if (item.Mode == "Credit")
                                    {
                                        <input class="form-check-input payment-checkbox" type="checkbox" id="@item.Mode" name="@item.Mode" value="@item.Mode" @(Model.Vehicules.MontantPayeeCredit != 0 ? "checked" : "")>
                                    }
                                    <label class="form-check-label mr-2" for="@item.Mode">@item.Mode</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>




